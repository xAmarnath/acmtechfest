# MongoDB Configuration
# REQUIRED: MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/

# Authentication Configuration
# REQUIRED: SHA-256 hash of your master password
# Generate hash: echo -n "your_password" | sha256sum
# Example below is hash of "0022" (CHANGE THIS!)
MASTER_PASSWORD_HASH=1a089ed67ca61c641ce8b150c96e1a9c4c5d8c37c6f6d44bcf2e7f1e4b4f5d8a

# CORS Configuration
# Comma-separated list of allowed origins
# Use '*' only for development (not recommended for production)
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.com

# Flask Configuration
# Set to 'True' only in development environment
FLASK_DEBUG=False

# Server Port
PORT=5000
